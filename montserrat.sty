\DeclareOptionX{oldstyle}{\edef\Montserrat@figurestyle{OsF}}
\DeclareOptionX{tabular}{\edef\Montserrat@figurealign{T}}
\DeclareOptionX{proportional}{\edef\Montserrat@figurealign{}}
\DeclareOptionX{thin}{\edef\mdseries@sf{t}}
